{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "rimraf build && copy-folder public build && copy-folder locale build/locale && tstl -p src/tsconfig.json && copy-folder src build && git clean -fxd src/**/*.lua && git clean -fxd build/**/*.ts && node package.js",
