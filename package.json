    "packageManager": "yarn@4.6.0",
    "dependencies": {
        "@eslint/js": "^9.18.0",
        "archiver": "^7.0.1",
        "copy-folder-util": "^1.1.4",
        "copyfiles": "^2.4.1",
        "eslint": "^9.19.0",
        "eslint-plugin-import": "^2.31.0",
        "lua-types": "^2.13.1",
        "prettier": "^3.4.2",
        "rimraf": "^6.0.1",
        "typed-factorio": "^3.11.0",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.20.0",
        "typescript-to-lua": "^1.29.1"
    },
    "devDependencies": {
        "@types/copyfiles": "^2"
    }
